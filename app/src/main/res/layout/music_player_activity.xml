<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MusicActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="253dp"
        android:layout_height="225dp"
        android:src="@drawable/image"
        android:background="@color/ColorYellow"/>

    <SeekBar
        android:id="@+id/positionBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/elapsedTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:11"
            android:layout_marginStart="40dp"/>

        <TextView
            android:id="@+id/remainingTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1:11"
            android:layout_marginStart="240dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/playBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_play_arrow_24"
            android:layout_centerInParent="true"
            android:onClick="playBtnClick" />

        <Button
            android:id="@+id/previousButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="130dp"
            android:background="@drawable/ic_baseline_skip_previous_24"
            android:backgroundTint="@color/ColorYellow" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="250dp"
            android:onClick="nextBtnClick"
            android:background="@drawable/ic_baseline_skip_next_24" />

        <Button
            android:id="@+id/shuffleBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="330dp"
            android:background="@drawable/ic_baseline_shuffle_24" />

        <Button
            android:id="@+id/loopBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:onClick="loopBtnClick"
            android:background="@drawable/ic_baseline_loop_24" />
    </RelativeLayout>




</LinearLayout>